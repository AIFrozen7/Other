<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <com.zhouwei.mzbanner.MZBannerView
                android:id="@+id/mz_banner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:clickable="true"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                app:open_mz_mode="true"
                app:middle_page_cover="false"
                app:canLoop="true"
                app:indicatorAlign="center"
                ></com.zhouwei.mzbanner.MZBannerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@mipmap/rxxp"
                    android:gravity="center"
                    android:text="热销新品"
                    android:textColor="#fd7b23"
                    android:textSize="20sp" />

                <GridView
                    android:id="@+id/grid_view_rxxp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:layout_weight="7"
                    android:numColumns="3"></GridView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@mipmap/mlss"
                    android:gravity="center"
                    android:text="魔力时尚"
                    android:textColor="#d043ff"
                    android:textSize="20sp" />

                <ListView
                    android:id="@+id/list_view_mlss"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"></ListView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/pzsh"
                    android:gravity="center"
                    android:text="品质生活"
                    android:textColor="#ff3d5d"
                    android:textSize="20sp" />

                <GridView
                    android:id="@+id/grid_view_pzsh"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:numColumns="2"></GridView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
